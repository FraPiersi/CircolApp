<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNomeProdotto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Prodotto"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textViewPrezzoProdotto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¬0.00"
            android:textSize="20sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrizione:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textViewDescrizioneProdotto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrizione del prodotto"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Richieste aggiuntive (opzionale):"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextRichiesteAggiuntive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:hint="Es: Senza zucchero, extra caldo, ecc..."
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnOrdina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ordina Prodotto"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
