<!-- res/layout/fragment_product_catalog.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.circolapp.viewmodel.ProductCatalogViewModel" /> <!-- O il tuo ViewModel corretto -->
        <import type="android.view.View"/>
        <!-- Aggiungi import per il tuo UIState se lo usi per visibilità -->
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProductCatalogFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Aggiungi qui un selettore di categoria se lo hai -->
            <Spinner
                android:id="@+id/spinnerCategoryFilter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone" /> <!-- Gestisci la sua visibilità -->


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewProducts"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/spinnerCategoryFilter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_product" />

            <ProgressBar
                android:id="@+id/progressBarCatalog"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textViewNoProductsCatalog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nessun prodotto disponibile in questa categoria."
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- FAB per Aggiungi Prodotto - VISIBILE SOLO PER ADMIN -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddProductCatalog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:contentDescription="Aggiungi nuovo prodotto"
            app:srcCompat="@drawable/aggiungi"
            android:visibility="gone"
        tools:visibility="visible"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
