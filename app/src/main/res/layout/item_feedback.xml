<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <View
                android:id="@+id/indicatorLetto"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_indicator"
                android:backgroundTint="?attr/colorAccent"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/textViewCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENERALE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:background="@drawable/background_categoria"
                android:padding="4dp"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25/07/2025 16:30"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewTitolo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titolo del feedback"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewUtente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Da: Nome Utente"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textViewMessaggio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Messaggio del feedback..."
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="3"
            android:ellipsize="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
