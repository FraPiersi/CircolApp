<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.circolapp.viewmodel.AddEditProductViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Nome Prodotto -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilProductName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nome Prodotto"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:text="@={viewModel.productName}" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Codice Prodotto -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilProductCode"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Codice Prodotto (ID)"
            app:layout_constraintTop_toBottomOf="@id/tilProductName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnScanBarcode"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etProductCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            android:enabled="@{viewModel.isCodeEditable}"
            android:text="@={viewModel.productCode}" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/btnScanBarcode"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/codice_barre"
    android:contentDescription="Scansiona Codice a Barre"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:padding="8dp"
    app:layout_constraintTop_toTopOf="@id/tilProductCode"
    app:layout_constraintBottom_toBottomOf="@id/tilProductCode"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/tilProductCode"
    app:tint="?attr/colorControlNormal"
    android:visibility="@{viewModel.isCodeEditable() ? View.VISIBLE : View.GONE}"
    tools:visibility="visible"/>

    <!-- Crea un'icona ic_barcode_scan.xml in res/drawable, per esempio: -->
    <!-- <vector xmlns:android="http://schemas.android.com/apk/res/android"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
        <path
            android:fillColor="@android:color/white"
            android:pathData="M4,6h16v2H4zM4,10h16v2H4zM4,14h8v2H4zM14,14h2v2h-2zM17,14h3v2h-3zM4,18h10v2H4zM16,18h4v2h-4z"/>
    </vector> -->

        <!-- Descrizione -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilProductDescription"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Descrizione"
            app:layout_constraintTop_toBottomOf="@id/tilProductCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="3"
                android:gravity="top"
                android:text="@={viewModel.productDescription}" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Numero Pezzi -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilProductPieces"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Numero Pezzi"
            app:layout_constraintTop_toBottomOf="@id/tilProductDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etProductPieces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={viewModel.productPieces}" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Categoria -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilProductCategory"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Categoria"
            app:layout_constraintTop_toBottomOf="@id/tilProductPieces"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etProductCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:text="@={viewModel.productCategory}" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- NUOVO CAMPO IMPORTO -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilProductAmount"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Importo (â‚¬)"
            app:layout_constraintTop_toBottomOf="@id/tilProductCategory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etProductAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="@={viewModel.productAmount}" />
        </com.google.android.material.textfield.TextInputLayout>


        <ProgressBar
            android:id="@+id/progressBarAddEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnSaveProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Salva Prodotto"
            android:onClick="@{() -> viewModel.saveProduct()}"
            app:layout_constraintTop_toBottomOf="@id/tilProductAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnDeleteProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Elimina Prodotto"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="?attr/colorError"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btnSaveProduct"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
